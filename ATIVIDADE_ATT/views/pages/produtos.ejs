<!DOCTYPE html>

<html>

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <%- include('../partials/navbar'); %>

        <div style="display: flex; flex-direction: column;">

            <div style="justify-content: flex-end; width: 70%; display: flex; margin: auto; margin-bottom: 20px;">
                <a href="/produtos/cadastrar" class="btn" role="button" style="background-color: #4b0082; color: #fff;">
                    Cadastrar Produto </a>
            </div>

            <div style="width: 70%; margin: auto;">

                <table class="table table-striped table-hover" style="width: 50%; margin: auto">
                    <thead style="background-color: #4b0082; color: #fff;">
                        <tr>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>Código</th>
                            <th>Preço</th>
                            <th>Ações</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% if(produtos.length <=0) { %>
                            <tr>
                                <td colspan="5">Nao existe produto cadastrado</td>
                            </tr>

                            <% } else{ for(let i=0; i < produtos.length; i++) { %>

                                <tr>
                                    <td>
                                        <%=produtos[i].nome %>
                                    </td>
                                    <td>
                                        <%=produtos[i].descricao %>
                                    </td>
                                    <td>
                                        <%=produtos[i].codigo %>
                                    </td>
                                    <td>
                                        <%=produtos[i].preco %>
                                    </td>
                                    <td>
                                        <a href="/produtos/editar/<%=produtos[i].id;%>"><i class="bi-pencil"></i></a>
                                        <a href="/produtos/deletar/<%=produtos[i].id;%>"><i class="bi-trash"></i></a>
                                    </td>
                                </tr>
                                <% } } %>
                    </tbody>
                </table>
            </div>
        </div>
</body>

</html>