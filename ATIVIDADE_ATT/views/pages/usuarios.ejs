<!DOCTYPE html>

<html>
    <head>
        <%- include('../partials/head'); %>
    </head>

    <body>
        <%- include('../partials/navbar'); %>

        <div style="display: flex; flex-direction: column;">

            <div style="justify-content: flex-end; width: 70%; display: flex; margin: auto; margin-bottom: 20px;">
                <a href="/cadastrar" class="btn" role="button" style="background-color: #4b0082; color: #fff;"> Cadastrar Usuario </a>
            </div>

            <div style="width: 70%; margin: auto;">

                <table class="table table-striped table-hover" style="width: 50%; margin: auto">
                    <thead style="background-color: #4b0082; color: #fff;">
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Senha</th>
                            <th>Ações</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% if(usuarios.length <= 0) { %>
                                <tr>
                                    <td>Nao existe usuario cadastrado</td>
                                </tr>

                        <% } else{
                
                            for(let i=0; i < usuarios.length; i++) { %>
                                
                                <tr>
                                    <td><%=usuarios[i].nome %></td>
                                    <td><%=usuarios[i].email %></td>
                                    <td><%=usuarios[i].senha %></td>
                                    <td>
                                        <a href="editar/<%=usuarios[i].email;%>"><i class="bi-pencil"></i></a>
                                        <a href="deletar/<%=usuarios[i].email;%>"><i class="bi-trash"></i></a>
                                    </td>
                                </tr>
                        <%   
                        }
                        }
                        %>
                    </tbody>    
                </table>
            </div>
        </div>
    </body>
</html>